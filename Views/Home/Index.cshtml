@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<div>
    <h3>Our Collection: </h3>
    @foreach (Book book in Model.Books)
    {
        <partial name="BookDetails" model="book" />
    }
    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-dark" page-class-selected="btn-success" page-url-category="@Model.CurrentCategory" class="btn-group pull-right m-1"
         data-toggle="tooltip" data-placement="top" title="Click to Navigate Pages"></div>
</div>

@model Book

<div class="card border border-success">
    <div class="card-body">
        <h5 class="card-title">
            @Model.Title
            <span class="badge badge-pill badge-success" style="float:right; font-size:15pt; font-weight:normal;">$@Model.Price</span>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">by @Model.Author</h6>
        <div class="collapse" id="collapse-@Model.BookID">
            <div class="card card-body">
                Publisher: @Model.Publisher<br />
                ISBN: @Model.ISBN<br />
                Classification: @Model.Classification<br />
                Category: @Model.Category<br />
                Number of Pages: @Model.NumPages<br />
            </div>
        </div>
        <input id="btn-details#@Model.BookID" onclick="toggleDetails(@Model.BookID)" value="More Details"
               class="btn btn-success" type="button" data-toggle="collapse" data-target="#collapse-@Model.BookID" />

        <form id="@Model.BookID" asp-page="/purchase" method="post">
            <input type="hidden" asp-for="BookID" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Title
                <button type="submit" class="btn btn-sm btn-success pull-right" style="float:right">Add to Cart</button>
            </span>
        </form>
    </div>

    
</div>
<br />